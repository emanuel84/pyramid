{% extends "layout.jinja2" %}
{% block content %}
<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h2>Login</h2>
        </div>
        <form action="{{ request.route_path('login') }}" method="POST">
            <div class="form-group">
                <input type="text" id="username" class="form-control" name="login" placeholder="usuario">                
            </div>
            <div class="form-group">
                <input type="password" name="password"  class="form-control" placeholder="clave">
            </div>
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </form>
        <p>usuario por defecto <strong>admin</strong></p>
        <p> clave por defecto <strong>admin</strong></p>
    </div>
    <p class="botto-text"> Desarrolado por Emanuel Pais</p>
</div>
{% endblock %}